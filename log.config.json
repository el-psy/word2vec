{
    "version":1,
    "formatters":{
        "simple":{
            "format":"[%(asctime)s - %(name)s - %(levelname)s]:\t%(message)s"
        }
    },
    "handlers":{
        "console":{
            "class":"logging.StreamHandler",
            "level":"DEBUG",
            "formatter":"simple",
            "stream":"ext://sys.stdout"
        },
        "file":{
            "class":"logging.FileHandler",
            "level":"DEBUG",
            "formatter":"simple",
            "filename":"./log/train.log",
            "encoding":"utf8",
            "mode":"a"
        }
    },
    "root":{
        "level":"DEBUG",
        "handlers":["console","file"]
    }
}